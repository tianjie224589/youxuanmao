/* pages/classify/index.wxss */
page{
  font-family: SimSun;
  background-color: #EEEEEE;
}
.category{
  display: flex;
}
.left_btn{
  width: 176rpx;
  height: 100vh;
  background: #fff;
  text-align: center;
  position: sticky;
  top:0;
}
.btn{
  height: 97rpx;
  line-height: 97rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.active{
  font-weight: 600;
  color: #EB607D;
  background: #EEEEEE;
  border-left: 5rpx solid red
}
.right_value{
  height: 100%;
  width: 100%;
  background: #EEEEEE;
  margin-bottom: 40rpx;
  padding: 20rpx;
  box-sizing:border-box;display:flex; justify-content: space-around;
}
.liqueur_title{
  height: 82rpx;
  font-size: 28rpx;
  color:red;
  margin-left: 44rpx;
}
.liqueur_title text{
  display: inline-block;
  margin-top: 48rpx;
}
.liqueur_box{
  width: 50%;
  padding: 10rpx;
  box-sizing:border-box;
}
.liqueur{
  width: 100%;
  text-align: center;
  background-color: white;
  border-radius:10px;
}
.liqueur image{
  width: 100%;
  border-radius:10px;
}
.name{
  font-size: 28rpx;
  margin-top: 14rpx;
}
.name_title{
  font-size: 28rpx;
  height: 40rpx;
  width: 100%;
  line-height: 40rpx;
  display: grid;
  overflow: hidden;
}
.name_money{
  font-size: 24rpx;
  width: 100%;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  display:flex; justify-content: space-around;
}
.name_price{
  color: #EB607D;
}
.name_advance{
  color:#7f7f7f;
}

.clear{
  clear: both;
}













