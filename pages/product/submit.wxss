/* pages/product/submit.wxss */
page{
  font-family: SimSun;
  background-color: #EEEEEE;
}
.category{
  display: grid;
  width: 100%;
  padding:0 40rpx;
  box-sizing: border-box;
}

.address{width: 100%; margin: 20rpx 0; border-radius: 20rpx; background-color: #ffffff; padding: 20rpx; box-sizing: border-box; display:flex; justify-content: space-between;}
.address-ico{width: 50rpx; height: 50rpx; border-radius: 50rpx; line-height: 50rpx; margin-top: 50rpx; box-sizing: border-box; background-color: #EB617B; text-align: center;}
.address-ads{width: 100%;}
.address-ads-info{font-size: 28rpx; padding-left: 30rpx;}

.order{width: 100%; margin-bottom: 20rpx; border-radius: 20rpx; background-color: #ffffff; padding: 20rpx; box-sizing: border-box; display:flex; justify-content: space-between;}
.order-img{height: 200rpx; width: 200rpx;border-radius:10px;}
.order-info{width: 500rpx; padding: 20rpx;box-sizing: border-box;}
.order-info-title{width: 100%; height: 80rpx; color: #484848; font-size: 28rpx; line-height: 40rpx; overflow: hidden;}
.order-info-des{ width: 100%;height: 120rpx; overflow: hidden; display:flex; justify-content: space-between;}
.order-info-des-jg{width: 200rpx; font-size: 60rpx; color: #FF000B; font-weight: 600;}
.order-info-des-jg-tb{font-size: 28rpx;font-weight: 500;}
.order-info-des-num{width: 500rpx;text-align: right;padding-top: 30rpx; box-sizing: border-box; }

.money{width: 100%; margin-bottom: 20rpx; border-radius: 20rpx; background-color: #ffffff; padding: 20rpx; box-sizing: border-box;}











