/* pages/my/shop/list.wxss */
page{
  font-family: SimSun;
  background-color: #F0F0F0;
}
.category{
  display: grid;
}


.order-list{width: 100%; padding: 20rpx; box-sizing:border-box;}
.order-li{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
  display:flex;
  justify-content: space-between;
}
.order-li-img{
  height: 200rpx;
  width: 200rpx;
  border-radius:10px;
}
.order_li_content{
  height: 200rpx;
  width: 300rpx;
  padding: 10rpx;
  box-sizing:border-box;
  overflow: hidden;
}
.order-li-c-info{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
  display:flex;
  justify-content: space-between;
}
.order-li-c-info-title{
  width: 300rpx;
  height: 100rpx;
  overflow: hidden;
  line-height: 50rpx;
  box-sizing: border-box;
}
.order-li-c-info-money{
  width: 140rpx;
  height: 100rpx;
  overflow: hidden;
  text-align: center;
  font-size: 60rpx;
}
.order-li-c-info-ico{
  font-size: 24rpx;
}
.order-li-c-des{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  display:flex;
  justify-content: space-between;
}
.order-li-c-des-note{
  width: 300rpx;
  font-size: 24rpx;
  color: #9B9B9B;
  padding: 10rpx 0;
  line-height: 40rpx;
}
.order-li-c-des-s{
  width: 140rpx;
  height: 70rpx;
  overflow: hidden;
  text-align: center;
  padding-top: 30rpx;
}
.order-li-c-des-s button{width: auto !important;}

