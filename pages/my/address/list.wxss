/* pages/my/address/list.wxss */
@import '/dist/common/index.wxss';
page{
  font-family: SimSun;
  background-color: #F0F0F0;
}
.category{
  display: grid;
}


.list{width: 100%; padding: 20rpx; box-sizing:border-box;}
.list-li{
  width: 100%; 
  height: 200rpx; 
  margin-bottom: 20rpx; 
  background-color: #FFFFFF; 
  color: #555553; 
  padding: 20rpx; 
  box-sizing:border-box;
  display:flex;
  justify-content: space-between;
}

.list-li-info{}
.title{font-size: 32rpx; font-weight: 600; line-height: 100rpx;}
.title text{ margin-right: 100rpx;}
.address-info{font-size: 28rpx;}
.default{width: auto !important;}

.list-li-edit{ width: 80rpx; text-align: center; padding-top: 80rpx; box-sizing:border-box;}

.addbank{
  width: 100%;
  padding: 20rpx;
  text-align: center;
  box-sizing:border-box;
}

.submit{
  width: 100% !important;
}


.van-swipe-cell__left{width: 65px; height: 200rpx; line-height: 200rpx; background-color: #07C160; color: white; text-align: center;}
.van-swipe-cell__right{width: 65px;height: 200rpx; line-height: 200rpx; background-color: #EE0A24; color: white; text-align: center;}






