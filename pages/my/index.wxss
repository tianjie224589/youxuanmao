/* pages/my/index.wxss */
.getwxgrant{
  margin: 100rpx;
}

.userinfo {
  width: 100%;
  background-color: #EA617B;
  display:flex;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 188rpx;
  height: 188rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin: 40rpx;
}

.userinfo-top{
  padding: 40rpx 0;
  color: white;
  line-height: 50rpx;
}

.userinfo-duanwei{
  font-size: 28rpx;
}

.userinfo-nickname {
  font-size: 32rpx;
}

.userinfo-mobile{
  font-size: 24rpx;
}

.my-money{
  width: 100%;
  height: 236rpx;
  background-color: thistle;
  position: relative;
}
.my-money-bg{
  width: 100%;
  height: 118rpx;
  background-color: #EA617B;
}
.my-money-body{
  height: 236rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color:rgba(0, 0, 0, 0.5);
  padding: 0 40rpx;
  box-sizing: border-box;
}

.my-money-content{
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display:flex; justify-content: space-around;
}

.my-money-x{
  width: 10rpx;
  height: 150rpx;
  background-color: red;
}

.my-money-title{
  width: 300rpx;
  height: 150rpx;
  background-color: #544;
}












